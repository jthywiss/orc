<!-- Lambda -->
	<section xml:id="ref.expressions.stop">
		<title><code>stop</code></title>
		<section xml:id="ref.expressions.stop.body">
			<para>
			The <code>stop</code> expression does nothing. 
			Execution of <code>stop</code> immediately <link linkend="ref.concepts.halt">halts</link> <link linkend="ref.concepts.silent">silently</link>.
			</para>
			
		</section>
		
		<section xml:id="ref.expressions.stop.syntax">
		  <title>Syntax</title>
		  <para>
		    <productionset>
		    <productionrecap linkend="ebnf.expression.stop"/>
		    </productionset>
		  </para>
		</section>
		
		<section xml:id="ref.expressions.stop.type">
		  <title>Type</title>
		  <para>
		    <code>stop</code> has type <code>Bot</code>. 
		  </para>
		</section>
		
		<section xml:id="ref.expressions.stop.examples">
		  <title>Examples</title>

		  <example xml:id="ref.expressions.stop.examples.printsilent">
		  <title>Print Silently</title>
<programlisting language="orc-demo"><![CDATA[
{-
  Print three numbers in sequence, and then halt, without publishing.
-}
Println("1") >> 
Println("2") >> 
Println("3") >>
stop

{-
OUTPUT:
1
2
3
-}
]]></programlisting>
		  </example>
		  
		  <example xml:id="ref.expressions.stop.examples.squareroot">
		  <title>Square Root</title>
<programlisting language="orc-demo"><![CDATA[
{-
  Define a square root function which halts silently if its argument is negative.
-}
def squareroot(n) = if (n <: 0) then stop else (n ** 0.5)

squareroot(-1)

{-
OUTPUT:
-}
]]></programlisting>
		  </example>
		  
	  </section>
		
