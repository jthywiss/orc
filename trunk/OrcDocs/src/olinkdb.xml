   <!ENTITY rmuri SYSTEM "refmanual.html">
   ]>
<targetset>
   <targetsetinfo>
      This file creates all of the necessary database files that support
	  olinks between the user guide and the reference manual to enable
	  mutual linking between the documents.
   </targetsetinfo>
 
   <!-- Site map for generating relative paths between documents -->
   <sitemap>
      <dir name="documentation">  <!-- Top level not used -->
         <dir name="OrcDocs">
            <dir name="build">
               <dir name="html">
				   <!-- TODO Set the URI parameter to dynamically changed as mentioned at
					   http://www.sagehill.net/docbookxsl/Olinking.html -->
                  <document targetdoc="root"
					  baseuri="all.html">
                     &ugtargets;
                  </document>
				  <dir name="refmanual">
					  <document targetdoc="refmanual"
						  baseuri="refmanual.html">
						 &rmtargets;
					  </document>
				  </dir>
               </dir>
            </dir>
         </dir>
      </dir>
   </sitemap>
</targetset>
