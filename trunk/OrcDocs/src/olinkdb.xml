<?xml version="1.0" encoding="utf-8"?>

<!-- Double check these file paths are correct if you're having problems -->
<!DOCTYPE targetset
   SYSTEM "../docbook-xsl/common/targetdatabase.dtd" [
   <!ENTITY ugtargets SYSTEM "../build/html/ugtargets.db">
   <!ENTITY rmtargets SYSTEM "../build/html/refmanual/rmtargets.db">
   <!ENTITY ref.combinators.otherwise SYSTEM "../build/html/refmanual/ref.combinators.otherwise.db">
   ]>
<targetset>
   <targetsetinfo>
      This file creates all of the necessary database files that support
	  olinks between the user guide and the reference manual to enable
	  mutual linking between the documents.
   </targetsetinfo>
 
   <!-- Site map for generating relative paths between documents -->
   <sitemap>
      <dir name="documentation">  <!-- Top level not used -->
         <dir name="OrcDocs">
            <dir name="build">
               <dir name="html">
				  <document targetdoc="root" baseuri="all.html"> 
                     &ugtargets;
                  </document>
				  <dir name="refmanual">
					  <dir name="content"/>
					  <document targetdoc="refmanual" baseuri="ref.toc.html">
						 &rmtargets;
					  </document>
					  <!--
					  <document targetdoc="refmanual.combinators_otherwise" baseuri="ref.combinators.otherwise.html">
						 &ref.combinators.otherwise;
					  </document>
						-->
				  </dir>
               </dir>
            </dir>
         </dir>
      </dir>
   </sitemap>
</targetset>
