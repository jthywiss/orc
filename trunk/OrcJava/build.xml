<?xml version="1.0" ?>
<project name="OrcJava" default="jar" basedir=".">
	<description>
		Ant build file for Orc binary distribution.
	</description>

	<!-- set global properties for this build -->
	<property name="build" location="build" />
	<property name="lib" location="lib" />

	<target name="jar" description="generate the distribution">
		<!-- Put everything in ${build} into orc.jar -->
		<jar jarfile="orc.jar" basedir="${build}">
			<!-- Include runtime dependencies -->
			<zipfileset src="${lib}/antlr.jar" />
			<zipfileset src="${lib}/args4j-2.0.9.jar" />
			<!-- Construct manifest file for this jar -->
			<manifest>
				<attribute name="Main-Class" value="orc.Orc"/>
			</manifest>	
		</jar>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build}" />
		<delete file="orc.jar" />
	</target>
</project>
