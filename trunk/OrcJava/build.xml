<?xml version="1.0" ?>
<project name="Orc" default="dist" basedir=".">
	<description>
		Ant build file for Orc binary distribution.
	</description>

	<property environment="env"/>
	
	<!-- set global properties for this build -->
	<property name="bin" location="bin" />
	<property name="lib" location="lib" />
	<property name="inc" location="inc" />
	<property name="dist" location="dist" />

	<target name="dist" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/lib" />
		<mkdir dir="${dist}/inc" />
		<!-- <mkdir dir="${dist}/doc" /> -->
		
		<!-- Put everything in ${bin} into orc.jar -->
		<jar jarfile="${dist}/orc.jar" basedir="${bin}">
			<!-- Construct manifest file for this jar -->
			<manifest>
				<attribute name="Main-Class" value="orc.Orc"/>
			</manifest>	
		</jar>
		
		<!-- Copy supporting jar files -->
		<copy todir="${dist}/lib">
		    <fileset dir="${lib}"/>
		</copy>
				
		<!-- Copy includes directory -->
		<copy todir="${dist}/inc">
		    <fileset dir="${inc}"/>
		</copy>
		
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${dist} directory tree -->
		<delete dir="${dist}" />
	</target>

	<target name="war" description="generate the war">
		<mkdir dir="war" />
		<mkdir dir="war/WEB-INF" />
		<copy file="web.xml" tofile="war/WEB-INF/web.xml" />
		<copy file="sun-jaxws.xml" tofile="war/WEB-INF/sun-jaxws.xml" />

		<mkdir dir="war/WEB-INF/lib" />
		<copy todir="war/WEB-INF/lib">
			<fileset dir="${lib}">
				<!-- FIXME: some of these are unnecessary at runtime -->
				<include name="*.jar"/>
			</fileset>
		</copy>

		<mkdir dir="war/WEB-INF/classes" />
		<copy todir="war/WEB-INF/classes">
			<fileset dir="${bin}">
				<!-- FIXME: some of these are unnecessary at runtime -->
				<include name="**/*.class"/>
			</fileset>
		</copy>

		<jar jarfile="orchard.war" update="true">
			<fileset dir="war">
				<include name="**/*"/>
			</fileset>
		</jar>
	</target>
</project>
