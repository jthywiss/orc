<?xml version="1.0" ?>
<project name="OrcMainline" default="dist" basedir=".">
	<description>
		Ant build file for Orc binary distribution.
	</description>

	<property environment="env"/>
	
	<!-- set global properties for this build -->
	<property name="bin" location="bin" />
	<property name="lib" location="lib" />
	<property name="dist" location="dist" />

	<target name="dist" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/lib" />
		<!-- <mkdir dir="${dist}/doc" /> -->
		
		<!-- Put everything in ${bin} into orc.jar -->
		<jar jarfile="${dist}/orc.jar" basedir="${bin}">
			<!-- Construct manifest file for this jar -->
			<manifest>
				<attribute name="Main-Class" value="orc.Orc"/>
			</manifest>	
		</jar>
		
		<!-- Copy supporting jar files -->
		<copy todir="${dist}/lib">
		    <fileset dir="${lib}"/>
		</copy>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${bin}" />
		<delete dir="${dist}" />
	</target>
</project>