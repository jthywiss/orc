<project name="OrcEclipse">
	<target name="copylib">
		<copy preservelastmodified="true" todir="lib" verbose="true">
			<fileset dir="../OrcJava/build" includes="orc-*.jar"/>
		</copy>
	</target>
	<target name="copyuserguide">
		<copy preservelastmodified="true" todir="help/orcuserguide" verbose="true">
			<fileset dir="../Website/userguide/html"/>
		</copy>
	</target>
</project>
